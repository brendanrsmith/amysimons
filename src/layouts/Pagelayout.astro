---
import Header from "../components/Header.astro";
import Link from "../components/link.astro";
import Layout from "./Layout.astro";
---

<Layout>
    <div class="sm:flex p-5 sm:min-h-screen grid">
        <div class="max-w-5xl flex-1 relative order-last mt-10 sm:mt-0">
            <slot name="gallery" />
        </div>

        <div class="flex flex-1 flex-col pr-16">
            <Header />
            <section class="sm:pt-24 pt-10 ml-4 max-w-sm text-sm flex-1">
                <slot name="body" />
            </section>
            <footer class="text-neutral-600 text-xs hidden :block">
                <Link href="https://www.instagram.com/_amy_simons_"
                    >amy simons</Link
                >
            </footer>
        </div>
    </div>
</Layout>
